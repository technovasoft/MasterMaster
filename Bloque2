from tkinter import *
from tkinter import messagebox
from tkinter import ttk
import os
import Cod2


bloque2=Tk() #crear ventana

bloque2.title("Bloque 2") #Nombre del bloque
bloque2.geometry("450x300")
bloque2.config(bg="#1C1C1C")
bloque2.iconbitmap("../imagenes/icon.ico")

#Aqui va todo el codigo
index=PhotoImage(file="../imagenes/index.png")
index2=Label(bloque2, image=index, bg="#1C1C1C")
index2.place(relx=1, rely=1, anchor=CENTER)

barraMenu=Menu(bloque2) #barra de menu
mnuTemas=Menu(barraMenu) #menus
mnuAyuda=Menu(barraMenu)
mnuCerrar=Menu(barraMenu)
def limpiar():
    limpiar=msj1.destroy()
    limpiar=lista.destroy()
    limpiar=boton1.destroy()
    limpiar=result1.destroy()
    limpiar=msj2.destroy()
    limpiar=boton1.destroy()
    limpiar=boton1.destroy()
    limpiar=boton1.destroy()
    limpiar=boton1.destroy()
    
def interfazMedArit():
   
    a=float
    msj1=Label(bloque2, text="Ingresa una lista de datos numéricos",fg="white", bg="#1C1C1C",font=("Arial", 18), bd=30)
    msj1.pack()
    lista = Entry(bloque2, width=50,textvariable = a)
    lista.pack()
    boton1= Button(bloque2, text="Calcular", font=("Arial", 12), command=Cod2.mediaAritmetica)
    boton1.pack(side=BOTTOM,padx=10, pady=10)
    result1=Label(bloque2, width=25,fg="white", bg="#1C1C1C",font=("Arial", 10), text="La Media Aritmética es: ")
    result1.pack()
    botonlim= Button(bloque2, text="Limpiar Ventana", font=("Arial", 12), command=limpiar)
    botonlim.pack(side=BOTTOM,padx=10, pady=10)
    
    
    
def interfazMediana ():
    a=int
    b=int
    c=int
    d=int
    d=int
    e=int

    
    msj2=Label(bloque2, text="Ingresa 5 números",fg="white", bg="#1C1C1C",font=("Arial", 18), bd=15)
    msj2.pack()
    numa= Entry(bloque2,textvariable = a, width=10)
    numa.pack()
    numb= Entry(bloque2,textvariable = b, width=10)
    numb.pack()
    numc= Entry(bloque2,textvariable = c, width=10)
    numc.pack()
    numd= Entry(bloque2,textvariable = d, width=10)
    numd.pack()
    nume= Entry(bloque2,textvariable = e, width=10)
    nume.pack()
    boton1= Button(bloque2, text="Calcular",font=("Arial", 12), command=Cod2.mediana(a,b,c,d,e))
    boton1.pack(side=BOTTOM, padx=100, pady=10)
    result2=Label(bloque2, width=17,fg="white", bg="#1C1C1C",font=("Arial", 10), text="La Mediana es: ")
    result2.pack()
    
    
def interfazModa ():
   
    b=int
    msj3=Label(bloque2, text="Ingresa una serie de datos numéricos",fg="white", bg="#1C1C1C",font=("Arial", 18), bd=30)
    msj3.pack()
    lista2 = Entry(bloque2,textvariable = b, width=50)
    lista2.pack()
    boton1= Button(bloque2, text="Calcular",font=("Arial", 12), command=Cod2.moda)
    boton1.pack(side=BOTTOM,padx=10, pady=10)
    result3=Label(bloque2, width=20,fg="white", bg="#1C1C1C",font=("Arial", 10), text="La Moda es: ")
    result3.pack()

def interfazMedGeo():
   
    c=int
    msj4=Label(bloque2, text="Ingresa una serie de datos numéricos",fg="white", bg="#1C1C1C",font=("Arial", 18), bd=30)
    msj4.pack()
    lista3 = Entry(bloque2,textvariable = c, width=50)
    lista3.pack()
    boton1= Button(bloque2, text="Calcular", font=("Arial", 12), command=Cod2.mediaGeometrica)
    boton1.pack(side=BOTTOM,padx=10, pady=10)
    result4=Label(bloque2, width=20,fg="white", bg="#1C1C1C",font=("Arial", 10), text="La Media Geométrica es: ")
    result4.pack()

mnuTemas.add_command(label="Media Aritmética", command=interfazMedArit)
mnuTemas.add_command(label="Moda", command=interfazModa)
mnuTemas.add_command(label="Mediana", command=interfazMediana)
mnuTemas.add_command(label="Media Geométrica", command=interfazMedGeo)


def ayuda ():
    ayuda=Tk()
    ayuda.title("Ayuda")
    ayuda.geometry("450x300")
    ayuda.config(bg="#1C1C1C")
    
mnuAyuda.add_command(label="Ver Ayuda", command=ayuda)

def cerrarVentana():
    bloque2.withdraw()
    
mnuCerrar.add_command(label="Cerrar Ventana", command=cerrarVentana)               
mnuCerrar.add_command(label="Salir", command=bloque2.destroy)



barraMenu.add_cascade(label="Temas", menu=mnuTemas)
barraMenu.add_command(label="Limpiar", command=limpiar)
barraMenu.add_cascade(label="Ayuda", menu=mnuAyuda)
barraMenu.add_cascade(label="Cerrar", menu=mnuCerrar)


bloque2.config(menu=barraMenu)

bloque2.mainloop()
